<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Treee.MainWindow"
        Width="800" Height="600"
        Title="QuadTree Visualizer"
        Background="Black">

  <DockPanel LastChildFill="True">

    <Border DockPanel.Dock="Bottom" Background="#DD333333" CornerRadius="10" Margin="10" Padding="5" HorizontalAlignment="Center">
      <StackPanel Orientation="Horizontal" Spacing="10">
        <Button Name="StepButton" Content="Шаг" Width="80"/>
        <Button Name="PauseButton" Content="Пауза" Width="80"/>
        <Button Name="PlayButton" Content="Старт" Width="80"/>
        <Button Name="RestartButton" Content="Рестарт" Width="80"/>
      </StackPanel>
    </Border>

    <Canvas Name="GameCanvas" Background="Black"/>
    
  </DockPanel>
</Window>
