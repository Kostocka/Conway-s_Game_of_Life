<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Treee.MainWindow"
        Width="800" Height="600"
        Title="QuadTree Visualizer"
        Background="Black">

  <DockPanel LastChildFill="True">

    <Border DockPanel.Dock="Bottom" Background="#DD333333" CornerRadius="10" Margin="10" Padding="5" HorizontalAlignment="Center">
      <StackPanel Orientation="Horizontal" Spacing="10">
        <Button Name="StepButton" Content="Step" Width="80"/>
        <Button Name="PauseButton" Content="Pause" Width="80"/>
        <Button Name="PlayButton" Content="Start" Width="80"/>
        <Button Name="RestartButton" Content="Restart" Width="80"/>
        <Button Name="ClearButton" Content="Clear" Width="80"/>
        <Slider Name="SpeedSlider" Minimum="50" Maximum="3000" Value="500" Width="100" TickFrequency="50" IsSnapToTickEnabled="True"/>
      </StackPanel>
    </Border>

    <Canvas Name="GameCanvas" Background="Black"/>
    
  </DockPanel>
</Window>
