<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Treee.MainWindow"
        Width="800" Height="600"
        Title="QuadTree Visualizer"
        Background="Black">

  <Grid RowDefinitions="*,Auto">

        <Canvas Name="GameCanvas" Background="Black" Grid.Row="0"/>

        <Border x:Name="ControlBar"
                Grid.Row="1"
                Background="#DD333333"
                CornerRadius="10"
                Margin="10"
                Padding="5"
                HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <Button Name="StepButton" Content="Step" Width="80"/>
            <Button Name="PauseButton" Content="Pause" Width="80"/>
            <Button Name="PlayButton" Content="Start" Width="80"/>
            <Button Name="RestartButton" Content="Restart" Width="80"/>
            <Button Name="ClearButton" Content="Clear" Width="80"/>
            <Button Name="SettingsButton" Content="Settings" Width="80" />
        </StackPanel>
        </Border>

        <Slider Name="SpeedSlider"
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,10"
                Minimum="100"
                Maximum="3000"
                Value="500"
                Width="120"
                TickFrequency="50"
                IsSnapToTickEnabled="True">
        </Slider>
  </Grid>
</Window>
