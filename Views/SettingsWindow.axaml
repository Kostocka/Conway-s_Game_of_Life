<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="using:Avalonia.Controls"
        x:Class="Treee.SettingsWindow"
        Width="500" Height="400"
        Title="Settings"
        WindowStartupLocation="CenterOwner">

    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="Настройки игры" FontSize="16" HorizontalAlignment="Center"/>

        <TextBlock Text="Цвет поля:"/>
            <ui:ColorPicker Name="FieldColorPicker" />

        <TextBlock Text="Цвет клеток:"/>
            <ui:ColorPicker Name="CellColorPicker" />

        <TextBlock Text="Настройка слайдера скорости (мс):"/>
        <StackPanel Orientation="Horizontal" Spacing="10">
            <StackPanel>
                <TextBlock Text="Минимум"/>
                <NumericUpDown Name="MinSpeedBox" Minimum="10" Maximum="10000" Value="100"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Максимум"/>
                <NumericUpDown Name="MaxSpeedBox" Minimum="100" Maximum="10000" Value="3000"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Name="ResetButton" Content="Сброс" Width="80"/>
            <Button Name="CancelButton" Content="Отмена" Width="80"/>
            <Button Name="OkButton" Content="OK" Width="80"/>
        </StackPanel>
    </StackPanel>
</Window>
